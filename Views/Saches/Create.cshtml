@model QuanLySach.Models.Sach

@{
    ViewData["Title"] = "Create";
}

<h3>Thêm mới sách</h3>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Maxb" class="control-label">Nhà Xuất Bản</label>
                <select asp-for="Maxb" asp-items="ViewBag.Maxb" class="form-select">
                    <option selected value="">--- Chọn Nhà Xuất Bản ---</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Maloai" class="control-label">Loại Sách</label>
                <select asp-for="Maloai" asp-items="ViewBag.Maloai" class="form-select">
                    <option selected value="">---Chọn Loại Sách---</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Tensach" class="control-label">Tên Sách</label>
                <input asp-for="Tensach" class="form-control" />
                <span asp-validation-for="Tensach" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Tacgia" class="control-label">Tác Giả</label>
                <input asp-for="Tacgia" class="form-control" />
                <span asp-validation-for="Tacgia" class="text-danger"></span>
            </div>

            <br />

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
                <button asp-action="Index" class="btn btn-outline-success">Back To List</button>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
